<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".BusinessCardUI">

    <!-- Main content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:clipToPadding="false"
            android:paddingBottom="96dp">

            <LinearLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Sharable section: header + contact rows (excludes bottom actions) -->
                <LinearLayout
                    android:id="@+id/shareContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <!-- Curved red header with hamburger and centered name/occupation -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:background="@drawable/header_wave">

                    <ImageButton
                        android:id="@+id/menuButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="16dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_menu"
                        android:contentDescription="Open menu"
                         />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/nameText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textColor="@color/white"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/occupation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Occupation"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </RelativeLayout>

                <!-- Contact rows -->
                <LinearLayout
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="-28dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <!-- Phone -->
                    <LinearLayout
                        android:id="@+id/phoneRow"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/rounded_pill"
                        android:gravity="center_vertical"
                        android:paddingStart="10dp"
                        android:paddingEnd="12dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/circle_icon_bg"
                            android:padding="6dp"
                            android:src="@drawable/ic_phone" />

                        <TextView
                            android:id="@+id/phoneno"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="phone no"
                            android:textColor="#1A1A1A"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Address -->
                    <LinearLayout
                        android:id="@+id/addressRow"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/rounded_pill"
                        android:gravity="center_vertical"
                        android:paddingStart="10dp"
                        android:paddingEnd="12dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/circle_icon_bg"
                            android:padding="6dp"
                            android:src="@drawable/ic_address" />

                        <TextView
                            android:id="@+id/address"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Address"
                            android:textColor="#1A1A1A"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Email -->
                    <LinearLayout
                        android:id="@+id/emailRow"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/rounded_pill"
                        android:gravity="center_vertical"
                        android:paddingStart="10dp"
                        android:paddingEnd="12dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/circle_icon_bg"
                            android:padding="6dp"
                            android:src="@drawable/ic_email" />

                        <TextView
                            android:id="@+id/email"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="email"
                            android:textColor="#1A1A1A"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Website -->
                    <LinearLayout
                        android:id="@+id/websiteRow"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/rounded_pill"
                        android:gravity="center_vertical"
                        android:paddingStart="10dp"
                        android:paddingEnd="12dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/circle_icon_bg"
                            android:padding="6dp"
                            android:src="@drawable/ic_website" />

                        <TextView
                            android:id="@+id/website"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="website"
                            android:textColor="#1A1A1A"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Instagram -->
                    <LinearLayout
                        android:id="@+id/instagramRow"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/rounded_pill"
                        android:gravity="center_vertical"
                        android:paddingStart="10dp"
                        android:paddingEnd="12dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/circle_icon_bg"
                            android:padding="6dp"
                            android:src="@drawable/ic_instagram" />

                        <TextView
                            android:id="@+id/instagram"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="instagram"
                            android:textColor="#1A1A1A"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                </LinearLayout> <!-- /shareContainer -->

                

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Sticky bottom action bar with pill grey background -->
        <LinearLayout
            android:id="@+id/bottomActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D0D5D9"
            android:paddingTop="12dp"
            android:paddingBottom="24dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/btnQr"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/round_action_bg"
                    android:contentDescription="Show QR"
                    android:src="@drawable/ic_qr"
                    android:scaleType="centerInside"
                    android:padding="12dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Show QR"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/scanQrBtn"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/round_action_bg"
                    android:contentDescription="Scan QR"
                    android:src="@drawable/ic_scan"
                    android:scaleType="centerInside"
                    android:padding="12dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Scan QR"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/viewSavedCardsBtn"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/round_action_bg"
                    android:contentDescription="Saved Cards"
                    android:src="@drawable/ic_save"
                    android:scaleType="centerInside"
                    android:padding="12dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Saved Cards"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/shareImageBtn"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/round_action_bg"
                    android:contentDescription="Share"
                    android:src="@drawable/ic_share"
                    android:scaleType="centerInside"
                    android:padding="12dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Share"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Navigation drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
