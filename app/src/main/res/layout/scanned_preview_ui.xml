<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?android:colorBackground">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scanned Bussiness Card"
            android:textSize="20sp"
            android:textColor="@color/textTitle"
            android:textStyle="bold"
            android:paddingBottom="20sp"></TextView>


        <!-- Business card style preview -->

        <FrameLayout
            android:id="@+id/previewCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/saved_card_bg"
            android:padding="0dp"
            android:elevation="3dp"
            android:clipToOutline="true"
            android:layout_gravity="center_horizontal">

            <!-- Solid red band to guarantee edge-to-edge coverage in the rounded top corners -->
            <View
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_gravity="top"
                android:background="@color/headerRed" />

            <!-- Wave overlay on top of the red band -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_gravity="top"
                android:scaleType="fitXY"
                android:src="@drawable/header_wave" />

            <LinearLayout
                android:id="@+id/previewContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="24dp"
                android:paddingBottom="22dp">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginStart="8dp"
                    android:paddingBottom="4dp"
                    android:text="Name" />

                <LinearLayout
                    android:id="@+id/rowOccupation"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/rounded_pill"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/circle_icon_bg"
                        android:padding="4dp"
                        android:src="@drawable/ic_occupation" />

                    <TextView
                        android:id="@+id/tvOccupation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:textSize="13sp"
                        android:textColor="#1A1A1A"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="Occupation" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rowEmail"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/rounded_pill"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/circle_icon_bg"
                        android:padding="4dp"
                        android:src="@drawable/ic_email" />

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:textSize="13sp"
                        android:textColor="#1A1A1A"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="Email" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rowPhone"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/rounded_pill"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/circle_icon_bg"
                        android:padding="4dp"
                        android:src="@drawable/ic_phone" />

                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:textSize="13sp"
                        android:textColor="#1A1A1A"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="Phone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rowInstagram"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/rounded_pill"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/circle_icon_bg"
                        android:padding="4dp"
                        android:src="@drawable/ic_instagram" />

                    <TextView
                        android:id="@+id/tvInstagram"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:textSize="13sp"
                        android:textColor="#1A1A1A"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="Instagram" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rowWebsite"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/rounded_pill"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/circle_icon_bg"
                        android:padding="4dp"
                        android:src="@drawable/ic_website" />

                    <TextView
                        android:id="@+id/tvWebsite"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:textSize="13sp"
                        android:textColor="#1A1A1A"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="Website" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rowAddress"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/rounded_pill"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/circle_icon_bg"
                        android:padding="4dp"
                        android:src="@drawable/ic_address" />

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:textSize="13sp"
                        android:textColor="#1A1A1A"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="Address" />
                </LinearLayout>

            </LinearLayout>
        </FrameLayout>

        <!-- Fallback raw text (hidden by default) -->
        <TextView
            android:id="@+id/scannedCardText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="8dp" />

        <Button
            android:id="@+id/saveCardButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save this Card"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn"
            android:textColor="@color/buttonText"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</ScrollView>
